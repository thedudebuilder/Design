    <script>
        // Scroll Logic for Arrows
        const scroller = document.getElementById('feedScroller');
        
        function scrollFeed(direction) {
            const height = scroller.clientHeight;
            scroller.scrollBy({
                top: height * direction,
                behavior: 'smooth'
            });
        }
    </script>

