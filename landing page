    <!-- THREE.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>

    <!-- MAIN 3D SCRIPT -->
    <script>
        const container = document.getElementById('canvas-container');
        const labelYes = document.getElementById('label-yes');
        const labelNo = document.getElementById('label-no');

        // --- 1. SCENE SETUP ---
        const scene = new THREE.Scene();
        const camera = new THREE.PerspectiveCamera(45, window.innerWidth / window.innerHeight, 0.1, 1000);
        const renderer = new THREE.WebGLRenderer({ alpha: true, antialias: false }); // Antialias OFF for dither look
        
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(window.devicePixelRatio > 2 ? 2 : window.devicePixelRatio);
        container.appendChild(renderer.domElement);

        // --- 2. DITHER SHADER LOGIC ---
        const ditherVertex = `
            varying vec3 vNormal;
            void main() {
                vNormal = normalize(normalMatrix * normal);
                gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
            }
        `;

        const ditherFragment = `
            uniform vec3 uColor;
            varying vec3 vNormal;

            // Bayer Matrix 4x4
            float find_closest(int x, int y, float v) {
                int index = x + y * 4;
                float limit = 0.0;
                if (index == 0) limit = 0.0625;
                if (index == 1) limit = 0.5625;
                if (index == 2) limit = 0.1875;
                if (index == 3) limit = 0.6875;
                if (index == 4) limit = 0.8125;
                if (index == 5) limit = 0.3125;
                if (index == 6) limit = 0.9375;
                if (index == 7) limit = 0.4375;
                if (index == 8) limit = 0.25;
                if (index == 9) limit = 0.75;
                if (index == 10) limit = 0.125;
                if (index == 11) limit = 0.625;
                if (index == 12) limit = 1.0;
                if (index == 13) limit = 0.5;
                if (index == 14) limit = 0.875;
                if (index == 15) limit = 0.375;
                return v < limit ? 0.0 : 1.0;
            }

            void main() {
                vec3 lightDir = normalize(vec3(0.5, 1.0, 1.0));
                float d = dot(vNormal, lightDir) * 0.6 + 0.4; 
                int x = int(mod(gl_FragCoord.x, 4.0));
                int y = int(mod(gl_FragCoord.y, 4.0));
                float final = find_closest(x, y, d);
                if (final < 0.5) discard;
                gl_FragColor = vec4(uColor, 1.0);
            }
        `;

        function createDitherMat(colorHex) {
            return new THREE.ShaderMaterial({
                uniforms: { uColor: { value: new THREE.Color(colorHex) } },
                vertexShader: ditherVertex,
                fragmentShader: ditherFragment,
                side: THREE.DoubleSide
            });
        }

        const matMetal = createDitherMat(0xEAEAEA); // Tungsten White
        const matAcid = createDitherMat(0xD4FF00);  // Acid Green
        const matYes = createDitherMat(0x00F0FF);   // Cyan
        const matNo = createDitherMat(0xFF0055);    // Magenta

        // --- 3. BUILD THE HERO SCALES ---
        const scaleGroup = new THREE.Group();

        // Pivot
        const pivot = new THREE.Mesh(new THREE.SphereGeometry(0.8, 16, 16), matMetal);
        scaleGroup.add(pivot);

        // Arm
        const arm = new THREE.Mesh(new THREE.BoxGeometry(14, 0.3, 0.3), matMetal);
        scaleGroup.add(arm);

        // Bowl Builder
        function buildBowl(material) {
            const group = new THREE.Group();
            // Strings
            const sGeo = new THREE.CylinderGeometry(0.03, 0.03, 5, 4);
            const s1 = new THREE.Mesh(sGeo, matMetal);
            s1.position.set(-1.5, 2.5, 0); s1.rotation.z = -0.3;
            const s2 = new THREE.Mesh(sGeo, matMetal);
            s2.position.set(1.5, 2.5, 0); s2.rotation.z = 0.3;
            group.add(s1); group.add(s2);
            // Bowl
            const bGeo = new THREE.SphereGeometry(2.5, 16, 8, 0, Math.PI*2, 0, Math.PI*0.5);
            const bowl = new THREE.Mesh(bGeo, matMetal); 
            bowl.rotation.x = Math.PI;
            // Liquid
            const liquid = new THREE.Mesh(bGeo, material);
            liquid.scale.set(0.9, 0.9, 0.9);
            liquid.rotation.x = Math.PI;
            group.add(bowl);
            group.add(liquid);
            return group;
        }

        // YES Bowl (Left)
        const leftBowl = buildBowl(matYes);
        const leftAnchor = new THREE.Group();
        leftAnchor.position.set(-7, 0, 0);
        leftAnchor.add(leftBowl);
        leftBowl.position.y = -5;

        // NO Bowl (Right)
        const rightBowl = buildBowl(matNo);
        const rightAnchor = new THREE.Group();
        rightAnchor.position.set(7, 0, 0);
        rightAnchor.add(rightBowl);
        rightBowl.position.y = -5;

        scaleGroup.add(leftAnchor);
        scaleGroup.add(rightAnchor);
        scene.add(scaleGroup);

        // --- 4. BUILD BACKGROUND DECOR (To keep scroll interesting) ---
        // Footer Ring
        const ringGeo = new THREE.TorusGeometry(18, 0.5, 16, 100);
        const meshRing = new THREE.Mesh(ringGeo, matAcid);
        meshRing.position.set(0, -65, -10);
        meshRing.rotation.x = Math.PI / 2;
        scene.add(meshRing);

        // Floating Shapes
        const icoGeo = new THREE.IcosahedronGeometry(4, 0);
        const meshIco1 = new THREE.Mesh(icoGeo, matMetal);
        meshIco1.position.set(15, -30, -10);
        scene.add(meshIco1);
        
        const meshIco2 = new THREE.Mesh(icoGeo, matMetal);
        meshIco2.position.set(-18, -45, -5);
        scene.add(meshIco2);


        // --- 5. POSITIONING & RESPONSIVENESS ---
        camera.position.z = 25;

        function setHeroPos() {
            if(window.innerWidth > 900) {
                // Desktop: Position to the right of the text
                scaleGroup.position.set(10, 0, 0);
            } else {
                // Mobile: Center
                scaleGroup.position.set(0, -4, -5);
            }
        }
        setHeroPos();

        // --- 6. ANIMATION LOOP ---
        let time = 0;
        const baseTilt = 0.25;

        function updateLabel(el, obj, offset) {
            const v = new THREE.Vector3();
            obj.getWorldPosition(v);
            v.y += offset;
            v.project(camera);
            
            // Check if behind camera
            if(v.z > 1) {
                el.style.opacity = 0;
                return;
            }

            const x = (v.x * 0.5 + 0.5) * window.innerWidth;
            const y = (-(v.y * 0.5) + 0.5) * window.innerHeight;

            el.style.opacity = 1;
            el.style.transform = `translate(-50%, -50%) translate(${x}px, ${y}px)`;
        }

        function animate() {
            requestAnimationFrame(animate);
            time += 0.015;

            // 1. Animate Scales
            // Float
            scaleGroup.position.y = (window.innerWidth > 900 ? 0 : -4) + Math.sin(time * 0.5) * 0.5;
            
            // Wobble/Tilt
            const wobble = Math.sin(time) * 0.05;
            scaleGroup.rotation.z = baseTilt + wobble;
            
            // Correct Bowl Rotation
            leftAnchor.rotation.z = -(baseTilt + wobble);
            rightAnchor.rotation.z = -(baseTilt + wobble);
            
            // Gentle spin
            scaleGroup.rotation.y = Math.sin(time * 0.2) * 0.1;

            // 2. Animate Background Elements
            meshRing.rotation.z += 0.002;
            meshIco1.rotation.x -= 0.01;
            meshIco1.rotation.y -= 0.01;

            // 3. Scroll Parallax
            const scrollY = window.scrollY;
            camera.position.y = -scrollY * 0.035;

            renderer.render(scene, camera);

            // 4. Update Labels
            updateLabel(labelYes, leftBowl, -3.5);
            updateLabel(labelNo, rightBowl, -3.5);
        }

        animate();

        // Resize Handler
        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
            setHeroPos();
        });

    </script>
</body>
</html>
