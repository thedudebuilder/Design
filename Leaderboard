    <script>
        // Simple Toggle Logic
        const btnPnL = document.getElementById('btn-pnl');
        const btnXP = document.getElementById('btn-xp');
        const profitCells = document.querySelectorAll('.val-green');

        btnXP.addEventListener('click', () => {
            btnXP.classList.add('active');
            btnPnL.classList.remove('active');
            // Mock change to XP
            profitCells.forEach(cell => {
                cell.classList.remove('val-green');
                cell.classList.add('val-xp');
                cell.innerText = cell.innerText.replace('+$', '').replace('k', '000') + " XP";
            });
        });

        btnPnL.addEventListener('click', () => {
            btnPnL.classList.add('active');
            btnXP.classList.remove('active');
            // Mock change back
            profitCells.forEach(cell => {
                cell.classList.add('val-green');
                cell.classList.remove('val-xp');
                cell.innerText = "+$" + cell.innerText.replace(' XP', '').substring(0,3) + "k";
            });
        });
    </script>

